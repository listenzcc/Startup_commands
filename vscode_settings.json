        "<C-a>": false, // select all
        "<C-f>": false, // search
        "<C-h>": false, // search and replace
        "<C-n>": false, // new file
        "<C-w>": false, // close file
    },
    "vim.autoSwitchInputMethod.obtainIMCmd": "C:\\Users\\zcc\\OneDrive\\apps\\im-select.exe",
    "vim.autoSwitchInputMethod.switchIMCmd": "C:\\Users\\zcc\\OneDrive\\apps\\im-select.exe {im}",
    "vim.autoSwitchInputMethod.defaultIM": "1033",
    "vim.autoSwitchInputMethod.enable": true,
    
    // Others
    "explorer.confirmDelete": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
